{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "catalog": {
            "matchCondition": {
                "route": "/api/catalog"
            },
            "backendUri": "%SERVICE__CATALOG__HOST%://%SERVICE__CATALOG__HOST%:%SERVICE__CATALOG__PORT%/api/catalog",
            "requestOverrides": {
                "backend.request.querystring.key": "%SERVICE__CATALOG__KEY%"
            }
        },
        "orders": {
            "matchCondition": {
                "route": "/api/orders"
            },
            "backendUri": "%SERVICE__ORDERS__HOST%://%SERVICE__ORDERS__HOST%:%SERVICE__ORDERS__PORT%/api/orders",
            "requestOverrides": {
                "backend.request.querystring.key": "%SERVICE__ORDERS__KEY%"
            }
        }
    }
}