{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "catalog": {
            "matchCondition": {
                "route": "/api/catalog"
            },
            "backendUri": "%CONNECTIONSTRINGS__CATALOG%/api/catalog",
            "requestOverrides": {
                "backend.request.querystring.key": "%SERVICE__CATALOG__KEY%"
            }
        },
        "orders": {
            "matchCondition": {
                "route": "/api/orders"
            },
            "backendUri": "%CONNECTIONSTRINGS__ORDERS%/api/orders",
            "requestOverrides": {
                "backend.request.querystring.key": "%SERVICE__ORDERS__KEY%"
            }
        }
    }
}